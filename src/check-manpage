# Bash options:
set -eu

while [ $# -gt 0 ] ; do
   echo "Checking $1 ..."
   LC_ALL=en_US.UTF-8 MANROFFSEQ='' MANWIDTH=80 man --warnings -E UTF-8 -l -Tutf8 -Z "$1" >/dev/null
   shift
done
